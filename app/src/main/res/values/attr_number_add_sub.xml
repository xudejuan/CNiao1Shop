<?xml version="1.0" encoding="utf-8"?>
<resources>

    //自定义属性，format表示类型为int类型或者引用
    <attr name="value" format="integer|reference"/>
    <attr name="minValue" format="integer|reference"/>
    <attr name="maxValue" format="integer|reference"/>
    <attr name="btnAddBackground" format="reference"/>//btnAdd 的背景设置
    <attr name="btnSubBackground" format="reference"/>//btnSub的背景设置
    <attr name="textViewBackground" format="reference"/>textView的背景设置

    <declare-styleable name="NumberAddSubView">

        <attr name="value" />
        <attr name="minValue" />
        <attr name="maxValue" />
        <attr name="btnAddBackground" />
        <attr name="btnSubBackground" />
        <attr name="textViewBackground" />


        </declare-styleable>

</resources>